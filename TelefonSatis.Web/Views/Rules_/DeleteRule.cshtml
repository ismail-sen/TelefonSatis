@using TelefonSatis.Database.TelefonSatisDatabase

@model Rules

@{
    ViewData["Title"] = "DeleteRule";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="border-1 border-danger">
    <h3 class="bg-primary">
        Rule Delete
    </h3>

<form  action="RuleDelete"  method="post" >

        <div>
            <input name="RuleId" value="@Model.RulesId" type="hidden" />
        </div>
        <div class="form-group">
            <label for="exampleFormControlInput1">Rule Name</label>
            <input class="form-control" readonly value="@Model.RulesName" type="text" name="ruleName" placeholder="Rule Name">
        </div>

        <div class="form-group">
            <label for="exampleFormControlInput1">Description</label>
        <input class="form-control" readonly value="@Model.Description" name="description" type="text" placeholder="Description">
        </div>

        <input type="submit" value="SİL" class="btn btn-danger" />
        <hr />
        <p>
            @Html.Raw(ViewBag.mesaj)
        </p>
    </form>

</div>