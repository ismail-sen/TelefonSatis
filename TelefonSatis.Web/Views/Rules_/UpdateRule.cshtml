@using TelefonSatis.Database.TelefonSatisDatabase

@model Rules


@{
    ViewData["Title"] = "UpdateRule";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" action="AddRule">
    <div>
		<input name="RulesId" value="@Model.RulesId" type="hidden" />
	</div>
    <div class="form-group">
        <label for="exampleFormControlInput1">Rule Name</label>
        <input class="form-control" value="@Model.RulesName" type="text" name="ruleName" placeholder="Rule Name">
    </div>

    <div class="form-group">
        <label for="exampleFormControlInput1">Description</label>
        <input class="form-control" value="@Model.Description" name="description" type="text" placeholder="Description">
    </div>

    <input type="submit" value="GÜNCELLE" class="btn btn-success" />
    <hr />
    <p>
        @Html.Raw(ViewBag.mesaj)
    </p>
</form>
