@using TelefonSatis.Database.TelefonSatisDatabase

@model Categories

@{
	ViewData["Title"] = "UpdateCategory";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" action="UpdateCategory">
    <div>
        <input name="CategoriesId" value="@Model.CategoriesId" type="hidden" />
    </div>
    <div class="form-group">
        <label for="exampleFormControlInput1">Category Name</label>
        <input class="form-control" value="@Model.CategoryName" type="text" name="categoryName" placeholder="Category Name">
    </div>
    
    <input type="submit" value="GÜNCELLE" class="btn btn-success" />
    <hr />
    <p>
        @Html.Raw(ViewBag.mesaj)
    </p>
</form>