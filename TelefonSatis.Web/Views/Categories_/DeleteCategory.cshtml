@using TelefonSatis.Database.TelefonSatisDatabase;

@model Categories

@{
	ViewData["Title"] = "DeleteCategory";
	Layout = "~/Views/Shared/_Layout.cshtml";
	
}

<div class="border-1 border-danger">

	<h3 class="big-primary">
		Category Delete
	</h3>
	<form  action="CategoryDelete"  method="post" >

	<div>
			<input name="CategoryId" value="@Model.CategoriesId" type="hidden" />
	</div> 

	<div class="form-group">
		<label for="exampleFormControlInput1">Category Name </label>
		<input class="form-control" readonly value="@Model.CategoryName" type="text" name="categoryname" placeholder="Category Name">
	</div>

	<input type="submit" value="DELETE" class="btn btn-danger" />

	<hr />

	<p>
		@Html.Raw(ViewBag.mesaj)
	</p>

	</form>

</div>
