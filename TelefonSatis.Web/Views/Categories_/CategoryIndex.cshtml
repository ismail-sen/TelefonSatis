@using TelefonSatis.Database.TelefonSatisDatabase
@model List<Categories>
@{
	ViewData["Title"] = "CategoryIndex";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>

	<a href="~/Categories_/AddCategory" class="btn btn-success">Add Category</a>
</div>

<table class="table">
	<thead>
		<tr>
			<th scope="col">#</th>
			<th scope="col">CategoriesId</th>
			<th scope="col">CategoryName</th>	
			<th scope="col">Update</th>
			<th scope="col">Delete</th>
		</tr>
	</thead>
	<tbody>

		@foreach (var item in Model)
		{
			<tr>
				<th scope="row">1</th>
				<td>@item.CategoriesId</td>
				<td>@item.CategoryName</td>
				<td> <a href="~/Categories_/UpdateCategory/@item.CategoriesId" class="btn-sm btn-warning"> Update</a> </td>
				<td> <a href="~/Categories_/DeleteCategory/@item.CategoriesId" class="btn-sm btn-danger">Delete</a></td>
			</tr>
		}

	</tbody>
</table>