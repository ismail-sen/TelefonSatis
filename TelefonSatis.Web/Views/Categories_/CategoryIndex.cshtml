@using TelefonSatis.Database.TelefonSatisDatabase
@model List<Categories>
@{
	ViewData["Title"] = "CategoryIndex";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>

	<a href="~/Categories_/AddCategory" class="btn btn-success">Add Category</a>
</div>

<table class="table">
	<thead>
		<tr>
			<th scope="col">#</th>
			<th scope="col">CategoriesId</th>
			<th scope="col">CategoryName</th>			
		</tr>
	</thead>
	<tbody>

		@foreach (var item in Model)
		{
			<tr>
				<th scope="row">1</th>
				<td>@item.CategoriesId</td>
				<td>@item.CategoryName</td>				
			</tr>
		}

	</tbody>
</table>