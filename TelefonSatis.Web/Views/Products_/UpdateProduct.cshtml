@using TelefonSatis.Database.TelefonSatisDatabase

@model Products

@{
	ViewData["Title"] = "UpdateProduct";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" action="UpdateProduct">
	<div>

		<input name="ProductsId" value="@Model.ProductsId" type="hidden" />
	</div>

	<div class="form-group">
		<label for="exampleFormControlInput1">Product Name</label>
		<input class="form-control" value="@Model.ProductName"  type="text" name="productName" placeholder="Product Name">
	</div>

	<div class="form-group">
		<label for="exampleFormControlInput1">Price</label>
		<input class="form-control" name="price" value="@Model.Price" type="text" placeholder="Price">
	</div>

	<div class="form-group">
		<label for="exampleFormControlInput1">Stock</label>
		<input class="form-control" name="stock" value="@Model.Stock" type="text" placeholder="Stock">
	</div>


	<div class="form-group">
		<label for="exampleFormControlSelect1">Category Choise</label>
		<select class="form-control" name="categoryId" id="exampleFormControlSelect1">
			

			<option selected value="@Model.CategoryId">@ViewBag.categoryName </option>
			@foreach (var item in ViewBag.Category)
			{
				<option value="@item.CategoriesId"> @item.CategoryName</option>
			}



		</select>
	</div>

	<input type="submit" value="GÜNCELLE" class="btn btn-success" />
	<hr />
	<p>
		@Html.Raw(ViewBag.mesaj)
	</p>
</form>