@using TelefonSatis.Database.TelefonSatisDatabase;

@model Products

@{
    ViewData["Title"] = "DeleteProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="border-1 border-danger">
    <h3 class="bg-primary">
        Rule Delete
    </h3>

    <form  action="ProductDelete"  method="post" >
        <div>
            <input name="ProductId" value="@Model.ProductsId" type="hidden" />
        </div>
		<div class="form-group">
			<label for="exampleFormControlInput1">Product Name</label>
			<input class="form-control" readonly value="@Model.ProductName" type="text" name="productName" placeholder="Product Name">
		</div>

		<div class="form-group">
			<label for="exampleFormControlInput1">Price</label>
			<input class="form-control" readonly name="price" value="@Model.Price" type="text" placeholder="Price">
		</div>

		<div class="form-group">
			<label for="exampleFormControlInput1">Stock</label>
			<input class="form-control" name="stock" value="@Model.Stock" type="text" placeholder="Stock">


		<div class="form-group">
			<label for="exampleFormControlSelect1">Category Choise</label>			
			<input class="form-control" readonly name="Category Choise"  type="text" placeholder="Category Choise">
		</div>

		<input type="submit" value="DELETE" class="btn btn-danger" />
		<hr />
		<p>
			@Html.Raw(ViewBag.mesaj)
		</p>
    </form>

</div>