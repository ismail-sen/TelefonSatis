@using TelefonSatis.Database.TelefonSatisDatabase


@model List< SP_ProductListWithCategory >
@{
	ViewData["Title"] = "ProductIndex";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="header navbar-area">
	<div class="container">
		<div class="row align-items-center">
			<div class="col-lg-8 col-md-6 col-12">
				<div class="nav-inner">
					<div class="mega-category-menu">
						<span class="cat-button"><i class="lni lni-menu"></i>All Categories</span>
						<ul class="sub-category">
							@foreach (var category in ViewBag.Category)
							{
								<li>
									<a href="product-grids.html">@category.CategoryName <i class="lni lni-chevron-right"></i></a>
								</li>
							}
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
</header>

<section class="trending-product section" style="margin-top: 12px;">
	<div class="container">
		<div class="row">
			<div class="col-12">
				<div class="section-title">
					<h2>Ürünler</h2>
				</div>
			</div>
		</div>
		<div class="row">

			@foreach (var item in Model)
			{
				<div class="col-lg-3 col-md-6 col-12">
					<!-- Start Single Product -->
					<div class="single-product">
						<div class="product-image">
							<img src="~/ShopGrids/assets/images/products/product-1.jpg" alt="#">
							<div class="button">
								<a href="#" class="btn"><i class="lni lni-cart"></i> Add to Cart</a>
							</div>
						</div>
						<div class="product-info">
							<span class="category">@item.CategoryName</span>
							<h4 class="title">
								<a href="~/Product/ProductDetail/@item.ProductsId">@item.ProductName</a>
							</h4>
							<ul class="review">
								<li><i class="lni lni-star-filled"></i></li>
								<li><i class="lni lni-star-filled"></i></li>
								<li><i class="lni lni-star-filled"></i></li>
								<li><i class="lni lni-star-filled"></i></li>
								<li><i class="lni lni-star"></i></li>
								<li><span>4.0 Review(s)</span></li>
							</ul>
							<div class="price">
								<span>@item.Price.ToString("C")</span>
							</div>
						</div>
					</div>
					<!-- End Single Product -->
				</div>
			}

		</div>
	</div>
</section>

